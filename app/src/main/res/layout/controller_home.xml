<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Mis Plantas"
            android:layout_margin="12dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/controller_home_recycler_view_my_plants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Mis Productos"
            android:layout_margin="12dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/controller_home_recycler_view_my_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Mas Vendidos"
            android:layout_margin="12dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/controller_home_recycler_view_most_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp" />

    </LinearLayout>

</ScrollView>